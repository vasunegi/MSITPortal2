<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ComplaintBoxActivity">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/student"
        android:src="@drawable/student1"
        android:layout_above="@+id/grad"
        android:layout_alignLeft="@+id/grad"
        android:layout_alignStart="@+id/grad" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/grad"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/grad_cap"
        android:layout_marginLeft="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/date"
        android:layout_alignTop="@+id/student"
        android:layout_toRightOf="@+id/student"
        android:hint="Date"
        android:layout_alignRight="@+id/title"
        android:layout_alignEnd="@+id/title" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/title"
        android:layout_below="@+id/student"
        android:layout_toRightOf="@+id/grad"
        android:layout_toEndOf="@+id/grad"
        android:hint="Title"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/next"
        android:layout_marginBottom="75dp"
        android:background="#ff1229ae"
        android:textColor="#ffffffff"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/title"
        android:layout_alignEnd="@+id/title"
        android:textStyle="italic" />


</RelativeLayout>
