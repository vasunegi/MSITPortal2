<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="vsgmu.osahub.com.coursesapplication.cseActivity2"
    android:id="@+id/cs"
    android:background="#ffd4d4d4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Information Technology is most prominent and rapidly developing field in todays world. To maintain speed with latest trends in Information Technology industry, our Information Technology department is fully empowered. Our fully air-conditioned laboratories contain sufficient number of computer systems with latest hardware and software configuration."
        android:id="@+id/textView"
        android:textSize="20dp"
        android:singleLine="false"
        android:phoneNumber="false"
        android:password="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Practical Labs"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#ff0e0dff"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enterprise Resource,  Planning Lab , Mobile Computing Lab,  Network Management and Security Lab, DBMS Lab,  Networking Technology,  Programming Lab"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
